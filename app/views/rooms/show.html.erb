<!-- Image -->
<div class="row">
  <div class="row">
    <div class="col-md-12">
  
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <% if @photos %>
          <ol class="carousel-indicators">
            <% @photos.each do |photo| %>
              <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
            <% end %>
          </ol>
        <% end %>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <% if @photos %>
            <% @photos.each do |photo| %>
              <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                <%= image_tag photo.image.url() %>
              </div>
            <% end %>
          <% end %>
        </div>
  
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>

<br>

<!--Main Info-->
<div class="row">
  <div class="col-md-8">
    
    <div class="row">
      <div class="col-md-3 text-center">
        <%= image_tag avatar_url(@room.user), class: "img-circle avatar-large" %><br><br>
        <%= link_to user_path(@room.user) do %>
        <%= @room.user.fullname %>
        <% end %>
      </div>

      <div class="col-md-9">
        <h1><%= @room.listing_name %></h1>
        <%= @room.address %>
        <hr style="color:red"></hr>
      </div>
      
      <div class="container">
          <div class="row text-center">
            <div class="col-xs-3 col-sm-3 col-md-3">
              <i class="fa fa-home fa-2x"></i>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3">
              <i class="fa fa-users fa-2x"></i>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3">
              <i class="fa fa-bed fa-2x"></i>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3">
              <i class="fa fa-bath fa-2x"></i>
            </div>
          </div>
      
          <div class="row text-center">
            <div class="col-xs-3 col-sm-3 col-md-3"><%= @room.room_type %></div>
            <div class="col-xs-3 col-sm-3 col-md-3"><%= @room.accommodate %> <%= @room.accommodate > 1? "Guests" : "Guest" %></div>
            <div class="col-xs-3 col-sm-3 col-md-3"><%= @room.bed_room %> <%= @room.bed_room > 1? "Beds" : "Beds" %></div>
            <div class="col-xs-3 col-sm-3 col-md-3"><%= @room.bath_room %> <%= @room.bath_room > 1? "Baths" : "Bath" %></div>
          </div>
        </div>
        
    </div>

    <!-- About -->
    <div class="row">
      <div class="col-md-12">
        <h3>About This Listing</h3>
        <p><%= @room.summary %></p>
      </div>
    </div>
    <hr>
    
    <!-- Amenities -->
    <div class="row">
      <div class="col-md-2">
        <h3>Amenities</h3>
      </div>
      <div class="col-md-12">
        <div class="row">
          <div class="col-sm-4 col-md-4">
            <ul class="amenities">
              <li class="<%= 'text-line-through' if !@room.is_tv %>">TV</li>
              <li class="<%= 'text-line-through' if !@room.is_kitchen %>">Kitchen</li>
              <li class="<%= 'text-line-through' if !@room.is_internet %>">Internet</li>
            </ul>
          </div>
          <div class="col-sm-4 col-md-4">
            <ul class="amenities">
              <li class="<%= 'text-line-through' if !@room.is_heating %>">Heating</li>
              <li class="<%= 'text-line-through' if !@room.is_air %>">Air Conditioning</li>
            </UL>
          </div>
        </div>
      </div>
    </div>
    <hr>
  
    <!-- Reviews -->
    <h3>Reviews <span id="average_rating"></span> (<%= @reviews.count %>)</h3><br>
      <h2>Leave a Review</h2><%= render 'reviews/form' if @booked && !@hasReview %>
    
    <div>
      <%= render 'reviews/list' %>
    </div>
  
    <!-- Google Map -->
    <div class="row">
      <div class="col-md-12">
        <div id="map"></div>
  
        <style>
          #map {
            width: 100%;
            height: 400px;
          }
        </style>
  				
  			<!-- Google Maps API -->	
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBiSSi9tViV1i8wH_mTYffgwS0vXFK-NaQ"></script>
        <script>
          function initialize() {
            var mapCanvas = document.getElementById('map');
            var mapOptions = {
              center: new google.maps.LatLng(<%= @room.latitude %>, <%= @room.longitude %>),
              zoom: 14,
              mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            var map = new google.maps.Map(mapCanvas, mapOptions);
            var marker = new google.maps.Marker({
              position: new google.maps.LatLng(<%= @room.latitude %>, <%= @room.longitude %>),
              title: "Naptivity"
            });
            marker.setMap(map);
          }
          google.maps.event.addDomListener(window, 'load', initialize);
        </script>
  
      </div>
    </div>
  
    <!-- Close by Rooms -->
    <h3>More places near by</h3>
    <div class="row">
      <% for room in @room.nearbys(10) %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %>
          </div>
          <div class="panel-body">
            <%= link_to room.listing_name, room %><br>
            (<%= room.distance.round(2) %> miles away)
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-4">
    <!-- Reservation form -->
    <%= render 'reservations/form' %>
  </div>
</div>

<script>
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @room.average_rating %>
  });
</script>